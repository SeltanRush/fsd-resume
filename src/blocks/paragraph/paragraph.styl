.paragraph
	font-size 1.77rem
	padding-left 4rem
	letter-spacing: -0.0001rem
	box-sizing content-box
	width 100%-4rem
	position relative
	padding-top 0.82rem
	margin 0

	&__name
		font-family MyriadProBold, sans-serif
		text-transform uppercase
		margin 0
		display inline-block
	
	&__date 
		margin 0
		display inline-block
		padding-left 1rem


	&__title
		margin 0
		text-transform uppercase
		margin-bottom 0.38rem
		margin-top 0.2rem
		margin-left -0.1rem

	&__text
		margin 0
		margin-left 0.1rem
		font-size 1.063rem
		

	&::before
		content ""
		position absolute
		display block
		width 1.375rem
		height 1.375rem
		border-radius 50%
		background-color: black
		left 1.2rem
		top 1.3rem