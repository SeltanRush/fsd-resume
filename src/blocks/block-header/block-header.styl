.block-title
	text-transform uppercase
	font-family MyriadProBold, Verdana, sans-serif
	color _blue
	box-sizing content-box
	width 100%
	margin 0
	margin-bottom 1.72rem
	font-size 2.83rem
	padding-left 6.8rem
	position relative

	&::after
		content ""
		display inline-block
		height 0.3rem
		background _blue
		position absolute
		top 0.5em
		margin-left 0.65rem
		width 60%
		margin-right -100%

.wrapper__left .block-title
	left -1rem

	&::after
		top 0.55em
			